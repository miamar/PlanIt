<!DOCTYPE html>
<html lang="en">
<head>
  <title>Home</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/index.css" rel="stylesheet" type="text/css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
<div class="card bg-light mb-3">
    <div class="card-header"><h6>ToDo lista</h6></div>
    <div class="card-body">
      <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#myModal"><img src="/icons/plus.svg" style="width: 1em;" ></button>
      <% for (var i=0; i<newListItem.lenght; i++){ %>
        <form action="/todo" method="post">
        <p class="card-text"><input type="checkbox" id="check" name="check"><label for="checkbox"> <%= newListItem[i] %> <button type="button" class="btn"><img src="/icons/x.svg" style="width: 0.75em;" ></button></label></p>
        <hr>
        </form>
       <% } %>
    </div>
  </div>
  <div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Unos nove aktivnosti</h4>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
  
        <!-- Modal body -->
        <form action="/todo" method="post">
        <div class="modal-body">
          <input type="novaAktivnost" class="form-control" id="novaAktivnost" name="novaAktivnost" style="border: 0;">
        </div>
  
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Spremi</button>
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Odustani</button>
        </div>
      </form> 
  
      </div>
    </div>
  </div>

</body>
</html>

